{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "@repo/eslint-config-bases",
    "compilerOptions": {
        "baseUrl": "./src",
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "incremental": true,
        "allowJs": true,
        "checkJs": true
    },
    "exclude": ["node_modules", "dist", "build"],
    "include": [
        ".eslintrc.*",
        "**/*.ts",
        "**/*.js",
        "**/*.cjs",
        "**/*.mjs",
        "**/*.json"
    ]
}
